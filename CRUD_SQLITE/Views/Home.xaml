<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_SQLITE.Views.Home">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout>
                    <Image
                        Source="avatar"
                        Aspect="AspectFit"
                        WidthRequest="100"
                        Margin="0 ,40 ,0 ,0"
                        />
                    <Label
                        Text="{Binding Name}"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        FontSize="20"
                        />
                    <Label
                        Text="{Binding Owner}"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        FontSize="14"
                        />
                </StackLayout>
                <StackLayout
                    Margin="0 ,40 ,0 ,0">
                    <Image
                        Source="store"
                        Aspect="AspectFit"
                        WidthRequest="100"
                        HeightRequest="300"
                        />
                </StackLayout>
                <StackLayout
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand">
                    <Label
                        Text="By Jorge Loor 2022"
                        HorizontalOptions="CenterAndExpand"
                        />
                    <Label
                        Text="v1.1.0"
                        HorizontalOptions="CenterAndExpand"
                        />
                    <FlexLayout
                        WidthRequest="0"
                        HeightRequest="50"
                        VerticalOptions="Center">
                        <ImageButton
                            BackgroundColor="Transparent"
                            Source="github"
                            Aspect="AspectFit"
                            WidthRequest="30"
                            HeightRequest="30"
                            Margin="0, 2, 10, 0"
                            Command="{Binding btnGitHub}"
                            />
                        <ImageButton
                            BackgroundColor="Transparent"
                            Source="instagram"
                            Aspect="AspectFit"
                            WidthRequest="30"
                            HeightRequest="30"
                            Margin="0, 2, 10, 0"
                            Command="{Binding btnInstagram}"
                            />
                        <ImageButton
                            BackgroundColor="Transparent"
                            Source="twitter"
                            Aspect="AspectFit"
                            WidthRequest="30"
                            HeightRequest="30"
                            Margin="0, 2, 10, 0"
                            Command="{Binding btnTwitter}"
                            />
                        <ImageButton
                            BackgroundColor="Transparent"
                            Source="web"
                            Aspect="AspectFit"
                            WidthRequest="30"
                            HeightRequest="30"
                            Margin="0, 2, 10, 0"
                            Command="{Binding btnWeb}"
                            />
                        <ImageButton
                            BackgroundColor="Transparent"
                            Source="linkedin"
                            Aspect="AspectFit"
                            WidthRequest="30"
                            HeightRequest="30"
                            Margin="0, 2, 10, 0"
                            Command="{Binding btnLinkedin}"
                            />
                    </FlexLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>