<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_SQLITE.Views.Shopping">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout>
                <Frame
                    HasShadow="True"
                    BackgroundColor="AliceBlue"
                    IsClippedToBounds="True"
                    Margin="30, 10"
                    CornerRadius="10"
                    Padding="0,0,0,-2"
                    Grid.Row="1">
                    <SearchBar
                        Placeholder="Search Product"
                        WidthRequest="250"
                        Text="{Binding NameProduct}"
                        />
                </Frame>
                <ImageButton BackgroundColor="Transparent"
                             Source="cart"
                             HorizontalOptions="Center"
                             VerticalOptions="CenterAndExpand"
                             Aspect="AspectFit"
                             WidthRequest="50"
                             HeightRequest="50"
                             Padding="0,12,-20,0"
                             Margin="0,0,2,0"
                             Command="{Binding goCart}"
                             x:Name="padre"
                             />
                <Frame
                    CornerRadius="50"
                    BackgroundColor="Red"
                    Padding="5" Margin="1,10 ,2, 20"
                    HeightRequest="30"
                    WidthRequest="25">
                    <Label
                        x:Name="textCounter"
                        Text="{Binding counter}"
                        TextColor="White"
                        VerticalTextAlignment="Center"/>
                </Frame>
            </FlexLayout>

            <CollectionView
                x:Name="viewPodroduct"
                ItemsSource="{Binding  List_Product}"  >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            RowDefinitions="*"
                            ColumnDefinitions="*">
                            <Frame Padding="20"
                                   BackgroundColor="black"
                                   Margin="10"
                                   CornerRadius="10">
                                <StackLayout>
                                    <Image
                                        Source="{Binding Image_Product}"
                                        HeightRequest="100"
                                        WidthRequest="100"
                                        />

                                    <FlexLayout
                                        HorizontalOptions="Center">
                                        <Label
                                            Text="Name:"
                                            Margin="0, 0,5,0"
                                            TextColor="White"
                                            />
                                        <Label
                                            Text="{Binding NameProduct}"
                                            Margin="0, 0, 5 ,0"
                                            MaxLines="1"

                                            TextColor="White"
                                            />
                                    </FlexLayout>
                                    <FlexLayout
                                        HorizontalOptions="Center">
                                        <Label
                                            Text="Brand:"
                                            Margin="0, -5, 5 ,0"
                                            TextColor="White"
                                            />
                                        <Label
                                            Text="{Binding Brand}"
                                            Margin="0, -5, 5 ,0"
                                            MaxLines="1"
                                            TextColor="White"
                                            />
                                    </FlexLayout>
                                    <FlexLayout
                                        HorizontalOptions="Center">
                                        <Label
                                            Text="Description:"
                                            Margin="0, -5, 5 ,0"
                                            TextColor="White"
                                            />
                                        <Label
                                            Text="{Binding Description}"
                                            MaxLines="1"
                                            Margin="0, -5, 5 ,0"
                                            TextColor="White"
                                            />
                                    </FlexLayout>
                                    <FlexLayout
                                        HorizontalOptions="Center">
                                        <Label
                                            Text="Price:"
                                            MaxLines="1"
                                            Margin="0, -5, 5 ,0"
                                            TextColor="White"
                                            />
                                        <Label
                                            Text="{Binding P_Unitary}"
                                            MaxLines="1"
                                            Margin="0, -5, 5 ,0"
                                            TextColor="White"
                                            />
                                    </FlexLayout>
                                    <Button Text="ADD TO CART"
                                            CornerRadius="20"
                                            BackgroundColor="Orange"
                                            Command="{Binding Source={x:Reference viewPodroduct},
                                            Path=BindingContext.btnAddToCart}"
                                            CommandParameter="{Binding .}"
                                            />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Span="2"
                        Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            </CollectionView>

            <StackLayout
                HeightRequest="30" >
                <Grid RowDefinitions="*">
                    <ImageButton
                        Source="left"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        Command="{Binding btnPrewPorduct}"/>
                    <ImageButton
                        Source="right"
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        Command="{Binding nextProduct}" />
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
