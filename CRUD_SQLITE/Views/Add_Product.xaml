<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_SQLITE.Views.Add_Product">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout >
                <Image Source="image.png" WidthRequest="100" Margin="10" />
                <Label Text="ADD NEW PRODUCT" HorizontalOptions="Center"/>
                <Entry x:Name="textName" Placeholder="Name"  WidthRequest="80" Margin="10" />
                <Entry x:Name="textCode"  Placeholder="Code"  WidthRequest="80" Margin="10" />
                <Entry x:Name="textBrand"  Placeholder="Brand"  WidthRequest="80" Margin="10" />
                <Entry x:Name="textDescription"  Placeholder="Description"  WidthRequest="80" Margin="10" />
                <Entry x:Name="textPrice"  Placeholder="Price"  WidthRequest="80" Margin="10" />
                <Entry x:Name="textQuantity"  Placeholder="Quantity"  WidthRequest="80" Margin="10" />
                <Button x:Name="btnAddProduct" Text="Save" Margin="50" CornerRadius="10" Clicked="createProduct_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>