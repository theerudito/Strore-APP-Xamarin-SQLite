<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_SQLITE.Views.Cart">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                Background="Silver">
                <FlexLayout
                    WidthRequest="100"
                    HeightRequest="40"
                    Margin="0">
                    <Label
                        Text="Cant"
                        WidthRequest="100"
                        Margin="10"
                        />
                    <Label
                        Text="Details"
                        WidthRequest="100"
                        Margin="10"
                        />
                    <Label
                        Text="P_Unitary"
                        WidthRequest="100"
                        Margin="10"
                        />
                    <Label
                        Text="P_Total"
                        WidthRequest="100"
                        Margin="10"
                        />
                    <Label
                        Text="Action"
                        WidthRequest="100"
                        Margin="10"
                        />
                </FlexLayout>
            </StackLayout>
            <ScrollView >
                <StackLayout
                    HeightRequest="300">
                    <FlexLayout
                        WidthRequest="100"
                        HeightRequest="40"
                        Margin="0">
                        <Label
                            x:Name="textQuantityProductCart"
                            Text="20"
                            WidthRequest="100"
                            Margin="10"
                            />
                        <Label
                            x:Name="textNameProductCart"
                            Text="Dorito"
                            WidthRequest="100"
                            Margin="10"
                            />
                        <Label
                            x:Name="textValueUnitaryProductCart"
                            Text="0.25"
                            WidthRequest="100"
                            Margin="10"
                            />
                        <Label
                            x:Name="textValuevTotalProductCart"
                            Text="0.25"
                            WidthRequest="100"
                            Margin="10"
                            />
                        <FlexLayout
                            WidthRequest="100"
                            HeightRequest="40"
                            Margin="10">
                            <Image
                                Source="edit"
                                Aspect="AspectFit"
                                WidthRequest="50"
                                HeightRequest="20"
                                />
                            <Image
                                Source="trash"
                                Aspect="AspectFit"
                                WidthRequest="50"
                                HeightRequest="20"
                                />
                        </FlexLayout>
                    </FlexLayout>
                </StackLayout>
            </ScrollView>
            <Grid  ColumnDefinitions="*,*">
                <FlexLayout
                    Grid.Column="1"
                    BackgroundColor="#0099FF">
                    <Label
                        Text="TOTAL:"
                        WidthRequest="100"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        TextColor="white"
                        />
                    <Label
                        x:Name="textTotal"
                        Text="2000"
                        WidthRequest="100"
                        FontSize="20"
                        TextColor="white"
                        />
                </FlexLayout>
            </Grid>
            <Frame
                Background="#0099FF"
                VerticalOptions="Center"
                Margin="5, 0, 5 ,0"
                Padding="5"
                CornerRadius="20">
                <Label
                    Text="DETAILS"
                    TextColor="white"
                    HorizontalOptions="Center"
                    />
            </Frame>
            <StackLayout
                HeightRequest="25"
                Margin="5, 0, 5 ,0"
                Background="silver"
                Padding="5">
                <Grid
                    ColumnDefinitions="*,*,*"
                    HorizontalOptions="Center">
                    <FlexLayout
                        Grid.Column="0"
                        Grid.Row="0"
                        HorizontalOptions="Center">
                        <Label
                            x:Name="Fecha"
                            Text="Fecha: "
                            />
                        <Label
                            x:Name="textDate"
                            Text="03/01/2023"
                            />
                    </FlexLayout>
                    <FlexLayout
                        Grid.Column="2"
                        Grid.Row="0">
                        <Label
                            x:Name="Hora"
                            Text="Hora: "
                            />
                        <Label
                            x:Name="textHour"
                            Text="11:50 AM"
                            />
                    </FlexLayout>
                </Grid>
            </StackLayout>
            <StackLayout
                HeightRequest="40"
                Margin="5, 0, 5 ,0"
                Background="silver"
                Padding="5">
                <Grid
                    ColumnDefinitions="200,*"
                    HorizontalOptions="Center">
                    <FlexLayout
                        Grid.Column="0"
                        Grid.Row="0" >
                        <Label
                            Text="Document: "
                            />
                        <Label
                            Text="Factura"
                            Grid.Column="5"
                            />
                    </FlexLayout>
                    <FlexLayout
                        Grid.Column="0"
                        Grid.Row="1" >
                        <Label
                            Text="numDocument: "
                            />
                        <Label
                            Text="123456"
                            Grid.Column="5"
                            />
                    </FlexLayout>
                    <FlexLayout
                        Grid.Column="2"
                        Grid.Row="0" >
                        <Label
                            Text="Serie: "
                            />
                        <Label
                            Text="001"
                            Grid.Column="5"
                            />
                    </FlexLayout >
                    <FlexLayout
                        Grid.Column="2"
                        Grid.Row="1">
                        <Label
                            Text="Serie: "
                            />
                        <Label
                            Text="002"
                            Grid.Column="5"
                            />
                    </FlexLayout>
                </Grid>
            </StackLayout>
            <StackLayout>
                <Grid
                    ColumnDefinitions="180,180"
                    HorizontalOptions="Center">
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="0" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <SearchBar
                            x:Name="textDNICart"
                            Placeholder="CI"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="0" Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            x:Name="textPhoneCart"
                            Placeholder="Phone"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="1" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            x:Name="textFirstNameCart"
                            Placeholder="First Name"
                            HeightRequest="40"    />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="1" Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            x:Name="textLastNameCart"
                            Placeholder="Last Name"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="2" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            x:Name="textEmailCart"
                            Placeholder="Email"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="2"
                        Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10"  >
                        <Entry
                            x:Name="textDirectionCart"
                            Placeholder="Direction"
                            HeightRequest="70"
                            />
                    </Frame>
                </Grid>
                <Button
                    Text="TO BUY"
                    Margin="10"
                    CornerRadius="5" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>