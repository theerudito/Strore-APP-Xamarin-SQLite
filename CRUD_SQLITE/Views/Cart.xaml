            <CollectionView
                Grid.Column="0"
                Grid.Row="1"
                BackgroundColor="Aqua">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Button  Text="sdsdaasd" WidthRequest="2" HeightRequest="5" BackgroundColor="Black"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



            <StackLayout
                Grid.Column="0"
                Grid.Row="2"
                >
                <Grid
                    RowDefinitions="*"
                    ColumnDefinitions="*,*">
                    <Frame
                        Padding="10"
                        BackgroundColor="#0099FF"
                        Grid.Column="1"
                        Grid.Row="0"
                        CornerRadius="20"
                        Margin="0,0,10,0">
                        <Grid
                            RowDefinitions="*"
                            ColumnDefinitions="*,*">
                            <Label
                                Text="TOTAL: "
                                Grid.Row="0"
                                Grid.Column="0"
                                TextColor="White"
                                FontAttributes="Bold"
                                />
                            <Label
                                Text="2000"
                                Grid.Row="0"
                                Grid.Column="1"
                                TextColor="White"
                                FontAttributes="Bold"
                                />
                        </Grid>
                    </Frame>
                </Grid>
            </StackLayout>

            <StackLayout
                Grid.Column="0"
                Grid.Row="3"
                BackgroundColor="#0099FF" >
                <Label
                    Margin="0,5,0,0"
                    Text="DETAILS"
                    TextColor="White"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    />
            </StackLayout>

            <StackLayout
                BackgroundColor="silver"
                Grid.Row="4"
                Grid.Column="0">
                <Grid
                    RowDefinitions="*"
                    ColumnDefinitions="40,*,40,*"
                    Margin="10,0,0,0">
                    <Label
                        Text="Date: "
                        Grid.Column="0"
                        Grid.Row="0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding Date}"
                        Grid.Column="1"
                        Grid.Row="0"
                        TextColor="black"
                        />
                    <Label
                        Text="Hour: "
                        Grid.Column="2"
                        Grid.Row="0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding Hour}"
                        Grid.Column="3"
                        Grid.Row="0"
                        TextColor="black"
                        />
                </Grid>
            </StackLayout>

            <StackLayout
                Margin="0,0,0,0"
                BackgroundColor="silver"
                Grid.Row="5"
                Grid.Column="0">
                <Grid
                    ColumnDefinitions="100,*,60,*">
                    <Label
                        Text="Document: "
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="10,0,0,0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding Document}"
                        Grid.Column="1"
                        Grid.Row="0"
                        TextColor="black"
                        />
                    <Label
                        Text="#Document: "
                        Grid.Column="0"
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding NumDocument}"
                        Grid.Column="1"
                        Grid.Row="1"
                        TextColor="black"
                        />
                    <Label
                        Text="Serie1: "
                        Grid.Column="2"
                        Grid.Row="0"
                        Margin="10,0,0,0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding Serie1}"
                        Grid.Column="3"
                        Grid.Row="0"
                        TextColor="black"
                        />
                    <Label
                        Text="Serie2: "
                        Grid.Column="2"
                        Grid.Row="1"
                        Margin="10,0,0,0"
                        TextColor="black"
                        />
                    <Label
                        Text="{Binding Serie2}"
                        Grid.Column="3"
                        Grid.Row="1"
                        TextColor="black"
                        />
                </Grid>
            </StackLayout>

            <StackLayout
                Grid.Row="6"
                Grid.Column="0"
                Margin="10,0,10,0">
                <Grid>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="0" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <SearchBar
                            Text="{Binding DNI}"
                            Placeholder="DNI"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="0" Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            Text="{Binding Phone}"
                            Placeholder="Phone"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="1" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            Text="{Binding FirstName}"
                            Placeholder="FirstName"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="1" Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            Text="{Binding LastName}"
                            Placeholder="LastName"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="2" Grid.Column="0"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            Text="{Binding Email}"
                            Placeholder="Email"
                            HeightRequest="70"
                            />
                    </Frame>
                    <Frame
                        HasShadow="True"
                        BackgroundColor="AliceBlue"
                        Grid.Row="2" Grid.Column="1"
                        IsClippedToBounds="True"
                        Margin="0, 5"
                        CornerRadius="10"
                        Padding="0,-10,0,-10">
                        <Entry
                            Text="{Binding Direction}"
                            Placeholder="Direction"
                            HeightRequest="70"
                            />
                    </Frame>
                </Grid>
            </StackLayout>

            <StackLayout
                Grid.Column="0"
                Grid.Row="7">
                <Button
                    Text="SAVE"
                    Margin="20,10,20,0"
                    CornerRadius="20"
                    Command="{Binding Save_Buy}"
                    />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>