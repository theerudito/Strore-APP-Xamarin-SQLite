            RowDefinitions="30,*,40,30,20,45,*"
            ColumnDefinitions="*">
            <StackLayout
                BackgroundColor="silver"
                Grid.Column="0"
                Grid.Row="0">
                <Grid>
                    <Label
                        Text="Cant"
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="5"
                        />
                    <Label
                        Text="Name"
                        Grid.Column="1"
                        Padding="5"
                        />
                    <Label
                        Text="P_Unitaty"
                        Grid.Row="0"
                        Grid.Column="2"
                        Padding="5"
                        />
                    <Label
                        Text="P_Total"
                        Grid.Row="0"
                        Grid.Column="3"
                        Padding="5"
                        />
                    <Label
                        Text="Action"
                        Grid.Row="0"
                        Grid.Column="4"
                        Padding="5"/>
                </Grid>
            </StackLayout>

